<div id="profile-header">
    <a href="/{{username}}">
        <div class="profile-image-container" style="background-image : url('{{avatar.large}}')"></div>
    </a>

    <h3>
        <a href="/{{username}}" style="color:inherit;">
            {{name}}
        </a>
    </h3>

    <div id="profile-stats">
        {{#if location}}
            <span class="stat" title='Location'>
                <a href="http://maps.google.com/maps?q={{location}}" target="_blank">
                    <i class="icon-map-marker"></i>
                </a>
                {{location}}
            </span>
        {{/if}}
        {{#if birthday}}
            <span class="stat" title='Makr Birthday'>
                <img src='{{imageUrl "buttons/bday@2x.png"}}' class="cake" />
                {{birthday}}
            </span>
            <span class="divider">•</span>
        {{/if}}
       {{#if current_user.admin}}
            <span> {{diaspora_id}} </span>
       {{/if}} 

        {{#if is_own_profile}}
            <span class="edit-control">
                <span class="divider">•</span>
                    <a href="/profile/edit" title="Edit Profile" rel="tooltip" style="margin-left:2px;">
                        <i class="icon-cog"></i>
                    </a>
                </span>
            </span>
        {{/if}}
        <br/>
        {{#if bio}}
            <em>{{bio}}</em>
        {{/if}}
    </div>

    <a href="/{{username}}/following">
        following: {{following}}
    </a>
    |
    <a href="/{{username}}/followers">
        followers: {{followers}}
    </a>

    {{#unless is_own_profile}}
        <div id="follow-btn-container"/>
    {{/unless}}
</div>
